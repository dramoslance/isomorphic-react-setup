{
  "name": "zwoop-website",
  "version": "1.0.0",
  "description": "Zwoop website with react hooks & ssr",
  "server": "index.js",
  "scripts": {
    "clean:build": "rm -rf public/build/*",
    "clean:build:win": "rimraf \"public\\build\\*",
    "build:client:dev": "webpack --config ./src/client/webpack/webpack.client.dev.js --watch",
    "build:server:dev": "webpack --config ./src/server/webpack/webpack.server.dev.js --watch",
    "build:client:prod": "webpack --config ./src/client/webpack/webpack.client.prod.js --mode production",
    "build:server:prod": "webpack --config ./src/server/webpack/webpack.server.prod.js --mode production",
    "start:server:prod": "export NODE_ENV=production && node ./dist/server.*.js",
    "start:iso:dev": "export NODE_ENV=development && npm run clean:build && npm run build:client:dev & wait-on public/build/index-dev.html && npm run build:server:dev --inspect",
    "start:iso:dev:win": "npm run clean:build:win && set NODE_ENV=development&& concurrently \"npm run build:client:dev\" \"wait-on public\\build\\index-dev.html && npm run build:server:dev\"",
    "start:iso:prod": "npm run build:client:prod && npm run build:server:prod && npm run start:server:prod",
    "heroku-prebuild": "npm i --unsafe-perm --dev node-sass && npm install --dev",
    "heroku-postbuild": "npm install --dev webpack",
    "start": "npm run start:iso:prod"
  },
  "keywords": [
    "react"
  ],
  "author": "kim gysen",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "config": "^3.1.0",
    "express": "^4.16.4",
    "node-bourbon": "^4.2.8",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "serve-favicon": "^2.5.0",
    "style-loader": "^1.1.2",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^2.0.2",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "reload": "^3.0.1",
    "sass-loader": "^7.1.0",
    "start-server-webpack-plugin": "^2.2.5",
    "wait-on": "^3.3.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  }
}
